<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:textSize="30dp"
        android:background="@color/main"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Number"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        />


    <EditText
        android:id="@+id/etaccountnumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_baseline_numbers_24"
        android:gravity="center"
        android:hint="Account Number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/etdatetransaction"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Date"
        android:gravity="center"
        android:inputType="date"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/ic_baseline_edit_calendar_24"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Time"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/ettimetransaction"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:gravity="center"
        android:hint="Time"
        android:inputType="date"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction Type"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        />


    <EditText
        android:id="@+id/ettransactiontype"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"

        android:gravity="center"
        android:hint="Transaction Type"
        android:inputType="text"
        android:textSize="18dp" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction Value"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        />


    <EditText
        android:id="@+id/ettransactionvalue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/ic_baseline_attach_money_24"
        android:gravity="center"
        android:hint="Transaction Value"
        android:inputType="number"
        android:textSize="18dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Account Statement"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvaccountstatement"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnsaveaccount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/main"

        />



    <Button
        android:id="@+id/btnback"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/main"

        />



</LinearLayout>